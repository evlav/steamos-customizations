#!/bin/bash

this_image=$(steamos-bootconf this-image)

if [ "${STEAMOS_CUSTOM_RAUC_CONF-}" ]; then
    exec /usr/bin/rauc --mount=@rauc_runtime_dir@ --override-boot-slot="$this_image" --conf="${STEAMOS_CUSTOM_RAUC_CONF}" service
else
    exec /usr/bin/rauc --mount=@rauc_runtime_dir@ --override-boot-slot="$this_image" service
fi
